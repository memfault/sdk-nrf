source "Kconfig.zephyr"

menu "Nordic LED-Button BLE GATT service sample"

config BT_LBS_SECURITY_ENABLED
	bool "Enable security"
	default y
	select BT_SMP
	select BT_SETTINGS
	select FLASH
	select FLASH_PAGE_LAYOUT
	select FLASH_MAP
	select NVS
	select SETTINGS
	help
	  "Enable BLE security for the LED-Button service"

config MEMFAULT_APP_SW_VERSION
	string "Memfault software version version"
	default "0.1.0"
	help
	  "Software version to be reported to Memfault"

endmenu


rsource "Kconfig.mds"
